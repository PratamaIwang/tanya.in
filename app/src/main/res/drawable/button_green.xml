<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="@color/grey002" />
            <corners android:radius="25dp"/>
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:bottom="1dp">
        <shape
            android:shape="rectangle">
                <corners android:radius="20dp"/>

                <gradient
                    android:startColor="@color/green001"
                    android:centerColor="@color/green002"
                    android:endColor="@color/green004"
                    android:angle="0" />

                <padding
                    android:bottom="7dp"
                    android:left="7dp"
                    android:right="7dp"
                    android:top="7dp" />

        </shape>
    </item>
</layer-list>
