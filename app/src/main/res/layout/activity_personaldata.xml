<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:orientation="vertical"
    tools:context=".Personaldata">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/black_stroke_circel"
        app:srcCompat="@drawable/ic_back"
        app:tint="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:background="@drawable/shape_login"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:text="Personal Data"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular" />

        <EditText
            android:id="@+id/inpFname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:padding="10dp"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:background="@drawable/input_yellow"
            android:minHeight="45dp"
            app:backgroundTint="@color/yellow001"
            android:fontFamily="@font/poppins_regular"/>

        <EditText
            android:id="@+id/inpLname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:background="@drawable/input_yellow"
            android:minHeight="45dp"
            app:backgroundTint="@color/yellow001"
            android:fontFamily="@font/poppins_regular"/>

        <EditText
            android:id="@+id/inpBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:hint="Birthday"
            android:inputType="date"
            android:background="@drawable/input_yellow"
            android:minHeight="45dp"
            app:backgroundTint="@color/yellow001"
            android:fontFamily="@font/poppins_regular"/>

        <EditText
            android:id="@+id/inpAddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:hint="Address"
            android:inputType="textNoSuggestions"
            android:background="@drawable/input_yellow"
            android:minHeight="45dp"
            app:backgroundTint="@color/yellow001"
            android:fontFamily="@font/poppins_regular"/>

        <EditText
            android:id="@+id/inpNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:hint="No. Handphone"
            android:inputType="phone"
            android:background="@drawable/input_yellow"
            android:minHeight="45dp"
            app:backgroundTint="@color/yellow001"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:text="Gender:"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="bold"
            />

        <RadioGroup
            android:id="@+id/radioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="15dp">

            <RadioButton
                android:id="@+id/radiofemale"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Female"
                android:background="@drawable/input_yellow"
                android:minHeight="45dp"
                app:background="@color/yellow001"
                android:fontFamily="@font/poppins_regular"/>

            <RadioButton
                android:id="@+id/radiomale"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:text="Male"
                android:background="@drawable/input_yellow"
                android:minHeight="45dp"
                app:backgroundTint="@color/yellow001"
                android:fontFamily="@font/poppins_regular"/>
        </RadioGroup>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textProfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Profile Image:"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/reg_ProfileImg"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginHorizontal="15dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <Button
                    android:id="@+id/btnRegSelectImg"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/input_yellow"
                    android:elevation="20dp"
                    android:text="Add Image"
                    android:textAllCaps="false"
                    android:textSize="18sp" />

            </RelativeLayout>

            <ProgressBar
                android:id="@+id/progressBarReg"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:background="@drawable/button_green"
                android:elevation="20dp"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>