<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Comment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30px"
            android:layout_marginTop="25px"
            android:background="@drawable/black_stroke_circel"
            app:srcCompat="@drawable/ic_back"
            app:tint="@color/white"
            tools:ignore="TouchTargetSizeCheck" />

        <LinearLayout
            android:layout_width="286dp"
            android:layout_height="520dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/comment1"
                android:layout_width="270dp"
                android:layout_height="700px"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                app:cardBackgroundColor="#D9FFFFFF"
                app:cardCornerRadius="10dp"
                app:cardElevation="15dp"
                app:cardMaxElevation="12dp">

                <TextView
                    android:id="@+id/info_text3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:gravity="center_horizontal"
                    android:text="Write Your Comment"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/comment3"
                    android:layout_width="240dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15px"
                    android:layout_marginBottom="0px"
                    app:cardBackgroundColor="@color/yellow001"
                    app:cardCornerRadius="12dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="202dp"
                        android:layout_height="155dp"
                        android:layout_gravity="center"
                        android:text="TextView" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/comment2"
                android:layout_width="270dp"
                android:layout_height="220px"
                android:layout_gravity="center"
                android:layout_marginTop="50px"
                android:layout_marginHorizontal="5dp"
                app:cardBackgroundColor="#D9FFFFFF"
                app:cardCornerRadius="10dp"
                app:cardElevation="15dp"
                app:cardMaxElevation="12dp">

                <TextView
                    android:id="@+id/info_text4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:gravity="center_horizontal"
                    android:text="Image"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/comment5"
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25px"
                    android:layout_marginBottom="0px"
                    app:cardBackgroundColor="@color/yellow001"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="190dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:hint="Add Image"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/buttoncomment"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_yellow"
                android:text="Upload" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>