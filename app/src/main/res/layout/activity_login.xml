<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_login"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    tools:context=".LoginActivity">

    <!--    <ImageView-->
    <!--        android:id="@+id/imageView"-->
    <!--        android:layout_width="337dp"-->
    <!--        android:layout_height="278dp"-->
    <!--        android:layout_gravity="center"-->
    <!--        android:layout_marginTop="50dp"-->
    <!--        android:src="@drawable/login"-->
    <!--        tools:src="@tools:sample/avatars" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="350dp">

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:background="@drawable/shape_login"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Login"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"/>

            <EditText
                android:id="@+id/inpEmail"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="15dp"
                android:paddingStart="10dp"
                android:textColorHint="#33776F6F"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:background="@drawable/input_yellow"
                android:minHeight="45dp"
                app:backgroundTint="@color/yellow001"
                tools:ignore="SpeakableTextPresentCheck"
                android:fontFamily="@font/poppins_regular"/>

            <EditText
                android:id="@+id/inpPassword"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="15dp"
                android:paddingStart="10dp"
                android:textColorHint="#33776F6F"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@drawable/input_yellow"
                android:minHeight="45dp"
                app:backgroundTint="@color/yellow001"
                tools:ignore="SpeakableTextPresentCheck"
                android:fontFamily="@font/poppins_regular"/>

            <ProgressBar
                android:id="@+id/pb_register"
                style="@style/TanyainThemeWhiteAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:background="@drawable/button_green"
                android:text="Login"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_regular"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:paddingRight="5dp"
                    android:text="Doesn't have an account?"
                    android:fontFamily="@font/poppins_regular" />

                <TextView
                    android:id="@+id/tv_createAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="Create Account"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>